{# TEMPLATE Almacenes/form.html.twig #}
{# Muestra los campos editables de la entidad        #}

<div style="float: left;">
{{ macro.input('Nombre','Etiqueta','text','Almacenes[Nombre]','Almacenes_Nombre',datos.Nombre,'50','CampoTextoMedio') }}
{{ macro.input('Dirección','Etiqueta','text','Almacenes[Direccion]','Almacenes_Direccion',datos.Direccion,'50','CampoTextoMedio') }}
{{ macro.input('Población','Etiqueta','text','Almacenes[Poblacion]','Almacenes_Poblacion',datos.Poblacion,'30','CampoTextoMedio') }}
{{ macro.select('Provincia','Etiqueta','Almacenes[IDProvincia]','Almacenes_IDProvincia',none,datos.IDProvincia.IDProvincia,datos.IDProvincia.fetchAll('Provincia'),'Select') }}
{{ macro.input('Código Postal','Etiqueta','text','Almacenes[CodigoPostal]','Almacenes_CodigoPostal',datos.CodigoPostal,'10','CampoCPostal') }}
{{ macro.input('Teléfono','Etiqueta','text','Almacenes[Telefono]','Almacenes_Telefono',datos.Telefono,'30','CampoTextoMedio') }}
{{ macro.input('Fax','Etiqueta','text','Almacenes[Fax]','Almacenes_Fax',datos.Fax,'30','CampoTextoMedio') }}
{{ macro.input('E-Mail','Etiqueta','text','Almacenes[EMail]','Almacenes_EMail',datos.EMail,'50','CampoTextoMedio') }}
{{ macro.select('Tipo','Etiqueta','Almacenes[Tipo]','Almacenes_Tipo',none,datos.Tipo.IDTipo,datos.Tipo.fetchAll,'Select') }}
{{ macro.select('Control Ubicaciones','Etiqueta','Almacenes[ControlUbicaciones]','Almacenes_ControlUbicaciones',none,datos.ControlUbicaciones.IDTipo,datos.ControlUbicaciones.fetchAll,'Select') }}
</div>

<div style="width: 270px;margin-left:10px;float: left;">
    {% if datos.IDAlmacen and datos.ControlUbicaciones.IDTipo %}
        <iframe width="100%" height="427" scrolling="yes" style="margin-top:5px; border:0;"
            src="{{app.path}}/AlmacenesMapas/list/{{datos.IDAlmacen}}">
        </iframe>
    {% endif %}    
</div>